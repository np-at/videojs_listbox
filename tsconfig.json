{
  "compilerOptions": {
    "module": "ES6",
    "target": "es5",
    "inlineSources": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "outDir": "build",
    "lib": [
      "es2015",
      "dom"
    ],
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": false

  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
